<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_marginStart="16dp"
            android:layout_height="70dp"
            android:id="@+id/employeeImageIV"
            android:layout_gravity="center"
            android:src="@drawable/personimage"
            >

        </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                >

                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/grey_80"
                    android:text="খুরশিদ আলম"
                    android:textSize="16sp"/>


                <TextView
                    android:id="@+id/postNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="প্রধান নির্বাহী কর্মকর্তা (সিইও)"
                    android:textSize="12sp"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/grey_60"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"/>


                <LinearLayout
                    android:id="@+id/callLL"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/educationTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="এম.এস.সি (কম্পিউটার সায়েন্স ইঞ্জিনিয়ারিং)"
                        android:textColor="@color/grey_60"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_phone"
                        app:tint="@color/grey_90" />

                    <TextView
                        android:id="@+id/phoneNumberTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="০১৬২৬৩২৩২৬৮"
                        android:textColor="@color/grey_60"
                        android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

</androidx.cardview.widget.CardView>